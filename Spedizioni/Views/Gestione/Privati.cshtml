@model IEnumerable<Spedizioni.Models.Clienti>

@{
    ViewBag.Title = "Privati";
}

<h2>Privati</h2>

@if (ViewBag.confirm != null)
{
    <div class="alert alert-success">@ViewBag.confirm</div>
}
else if (ViewBag.errore != null)
{
    <div class="alert alert-warning">@ViewBag.errore</div>
}

<div class="btn btn-outline-primary">
    @Html.ActionLink("Crea nuova anagrafica cliente", "CreatePrivate")
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdCliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cognome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CF)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Indirizzo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cognome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CF)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Indirizzo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.ActionLink("Modifica", "EditPrivate", new { id = item.IdCliente }) |
                @Html.ActionLink("Cancella", "DeletePrivate", new { id = item.IdCliente })
            </td>
        </tr>
    }

</table>
